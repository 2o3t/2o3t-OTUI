{
    "name": "ot-ui",
    "version": "0.1.0",
    "author": "zyao89 <zyao89@gmail.com>",
    "description": "A UI for Vue Project",
    "private": true,
    "scripts": {
        "serve": "vue-cli-service serve",
        "build": "vue-cli-service build",
        "lint": "vue-cli-service lint",
        "lint:libs": "eslint ./libs",
        "lint:libs:fix": "eslint ./libs --fix",
        "sass:main": "node_modules/node-sass/bin/node-sass --watch sass/main.scss libs/styles/main.css",
        "sass:test": "node_modules/node-sass/bin/node-sass --watch sass/test/test.scss sass/test/test.css"
    },
    "files": [
        "libs/**/*"
    ],
    "dependencies": {
        "font-awesome": "^4.7.0",
        "highlight.js": "^9.12.0",
        "vue": "^2.5.17",
        "vue-router": "^3.0.1"
    },
    "devDependencies": {
        "@vue/cli-plugin-babel": "^3.0.4",
        "@vue/cli-plugin-eslint": "^3.0.4",
        "@vue/cli-service": "^3.0.4",
        "node-sass": "^4.9.3",
        "sass-loader": "^7.1.0",
        "vue-template-compiler": "^2.5.17"
    },
    "eslintConfig": {
        "root": true,
        "env": {
            "browser": true,
            "node": true
        },
        "extends": [
            "plugin:vue/essential",
            "eslint:recommended"
        ],
        "rules": {
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "indent": [
                "error",
                4,
                {
                    "SwitchCase": 1,
                    "VariableDeclarator": 1
                }
            ]
        },
        "parserOptions": {
            "parser": "babel-eslint"
        }
    },
    "postcss": {
        "plugins": {
            "autoprefixer": {}
        }
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not ie <= 8"
    ]
}
